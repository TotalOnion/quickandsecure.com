{% extends 'base.html.twig' %}

{% set title = "Here's your secret" %}

{% block stylesheets %}
  {{ encore_entry_link_tags('decrypt') }}
{% endblock %}

{% block body %}
  <h3>Someone sent you a one time secret! ðŸ‘Œ</h3>
  <p>Below is the secret text they sent. Copy and paste it where you need to now. Once you close this page it is gone for good. Permanently.</p>
  <div class="mb-3">
    <textarea
      class="form-control"
      name="secret"
      rows="7"
      data-source="secret"
      disabled
    ></textarea>
  </div>
  <div class="row">
    <div class="col">
      <button
        type="button"
        class="btn btn-primary btn-lg"
        data-action="copy-to-clipboard"
        data-copy-source="secret"
        data-success-message="Copied!"
      >
        Copy to your clipboard
      </button>
    </div>
  </div>
{% endblock %}

{% block javascripts %}
  {{ encore_entry_script_tags('decrypt') }}
{% endblock %}
