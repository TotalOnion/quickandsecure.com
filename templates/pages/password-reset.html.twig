{% extends 'base.html.twig' %}

{% set title = "Verifying your email" %}
{% set body_id = 'email-verify' %}

{% block head %}
  <meta name="robots" content="noindex">
{% endblock %}
{% block stylesheets %}
  {{ encore_entry_link_tags('decrypt') }}
{% endblock %}

{% block body %}
    <div id="start">
        <div class="app glass-background glass-background__with-shadow">
            <h3>Reset your password</h3>
            {% if mode == 'invalid-request' %}
                <p class="error">Sorry but the URL doesn't seem right.</p>
            {% elseif mode == 'user-not-found' %}
                <p class="error">Sorry but that email verification user or token could not be found.</p>
            {% elseif mode == 'validation-failed' %}
                <p class="error">Validation failed:</p>
                <p class="error">{{ error }}</p>
            {% elseif mode == 'ready' %}
                <p class="ready">
                    ## TODO - Form goes here ##
                </p>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
  
{% endblock %}
